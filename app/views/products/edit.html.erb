<h1>Editing product</h1>

<% form_for(@product) do |f| %>
<%= f.error_messages %>

<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %><br />
  <%= f.text_area  :description, :rows => 6 %>
</p>

<p>
<%= f.label :author %><br />
<%= f.text-field  :author %>
</p>

<p>
<%= f.label :price %><br />
<%= f.text_field  :price %>
</p>


<p>
  <%= f.submit "Update" %>
</p>
<% end %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
